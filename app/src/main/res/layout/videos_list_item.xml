<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/videos_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/videos_touxiang"
            android:src="@mipmap/raw_1500033586"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y150" />

        <RelativeLayout
            android:id="@+id/videos_list_rl"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/videos_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y150">

            <TextView
                android:textSize="20sp"
                android:textColor="#ff6655"
                android:id="@+id/videos_list_nicheng"
                android:text="发布人昵称"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/videos_list_nicheng"
                android:id="@+id/fg11_list_date"
                android:text="日期"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/videos_list_des"
        android:layout_below="@+id/videos_rl"
        android:text="描述"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/videos_list_des"
        android:id="@+id/videos_list_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"/>
    

</RelativeLayout>